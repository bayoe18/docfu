---
interface Props {
  title?: string
}

const { title = 'Note' } = Astro.props
---

<div class="callout">
  <div class="callout-title">{title}</div>
  <div class="callout-content">
    <slot />
  </div>
</div>

<style>
  .callout {
    background: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 0.5rem;
    padding: 1rem;
    margin: 1rem 0;
  }
  .callout-title {
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: #333;
  }
  .callout-content {
    color: #666;
  }
</style>
